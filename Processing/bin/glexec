#!/bin/bash -f
#===================================================================================================
# Interface to execute a script on the server as globus ticket mapped user.
#===================================================================================================
TICKET=$X509_USER_PROXY
SCRIPT=$1

if [ ".$2" != "." ]
then
  #echo " Generating script: sc.$$"
  echo "#!/bin/bash"  > sc.$$
  #echo "whoami"      >> sc.$$
  #echo "echo $*"     >> sc.$$
  echo "$*"          >> sc.$$
  SCRIPT=sc.$$
fi

# Make sure it is executable
chmod 755   $SCRIPT

# Copy ticket and script
scp $TICKET $TIER2_USER@se01.cmsaf.mit.edu:$X509_USER_PROXY 2> /dev/null
scp $SCRIPT $TIER2_USER@se01.cmsaf.mit.edu:/tmp/            2> /dev/null

# Execute the script
ssh $TIER2_USER@se01.cmsaf.mit.edu \
  "export GLEXEC_CLIENT_CERT=$X509_USER_PROXY; /osg/grid/glexec-osg/sbin/glexec /tmp/$SCRIPT"

# Cleanup remotely
ssh $TIER2_USER@se01.cmsaf.mit.edu \
  "rm /tmp/$SCRIPT $X509_USER_PROXY"

# Cleanup locally
if [ -e sc.$$ ]
then
  rm sc.$$
fi

exit 0
